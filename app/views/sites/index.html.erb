<style>
.pagination {
  display: flex;
  justify-content: center;
  list-style: none;
  padding: 0;
}

.pagination li {
  margin: 0 5px;
}

.pagination a, .pagination span {
  padding: 8px 12px;
  text-decoration: none;
  color: #333;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.pagination .active span {
  background-color: #007bff;
  color: #fff;
}
a.show-site-button {
  background-color: #007BFF; /* Blue color, you can change this */
  color: #fff; /* White text color */
  padding: 8px 16px; /* Adjust padding for better spacing */
  text-decoration: none;
  border-radius: 4px; /* Rounded corners */
  display: inline-block;
  transition: background-color 0.3s; /* Smooth transition on hover */

  /* Additional styles for hover state */
  &:hover {
    background-color: #0056b3; /* Darker shade on hover, you can change this */
  }
}

</style>
<p style="color: green"><%= notice %></p>
<%= link_to "New site", new_site_path, style: "background-color: #4CAF50; /* Green */ color: white; padding: 10px 20px; text-align: center; text-decoration: none; display: inline-block; border-radius: 4px; font-size: 16px;" %>


<h1>Sites</h1>

<div id="sites">
  <% @sites.each do |site| %>
    <%= render site %>
    <p>
    <%= link_to "Show this site", site, class: "show-site-button" %>
    </p>
  <% end %>
</div>
<%= paginate @sites %>
